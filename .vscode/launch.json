            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": ["-d", "--log-level=debug", "--metrics"]
        },
        {
            "name": "Debug Sessions",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": ["-d", "--log-level=debug", "--metrics", "--sessions"]
